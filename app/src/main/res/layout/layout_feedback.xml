<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/feedback_user_avatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_single"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feedback_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLength="28"
        android:text="Customer name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/feedback_user_avatar"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Star 1"
        android:src="@drawable/baseline_star_rate_empty_24"
        app:layout_constraintStart_toStartOf="@+id/feedback_username"
        app:layout_constraintTop_toBottomOf="@+id/feedback_username" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Star 2"
        android:src="@drawable/baseline_star_rate_empty_24"
        app:layout_constraintStart_toEndOf="@+id/star1"
        app:layout_constraintTop_toTopOf="@+id/star1" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Star 3"
        android:src="@drawable/baseline_star_rate_empty_24"
        app:layout_constraintStart_toEndOf="@+id/star2"
        app:layout_constraintTop_toTopOf="@+id/star2" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Star 4"
        android:src="@drawable/baseline_star_rate_empty_24"
        app:layout_constraintStart_toEndOf="@+id/star3"
        app:layout_constraintTop_toTopOf="@+id/star3" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Star 5"
        android:src="@drawable/baseline_star_rate_empty_24"
        app:layout_constraintStart_toEndOf="@+id/star4"
        app:layout_constraintTop_toTopOf="@+id/star4" />

    <TextView
        android:id="@+id/feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/line"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/star1"
        app:layout_constraintTop_toBottomOf="@+id/star1" />

    <TextView
        android:id="@+id/feedback_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="feedback"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/star1"
        app:layout_constraintTop_toBottomOf="@+id/feedback_user_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>